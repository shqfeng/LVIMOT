<launch>

    <arg name="alpha" default="1.0" />
    <arg name="beta" default="1.0" />
    <arg name="gamma" default="1.0" />

    <arg name="rawdata" default="true" />
    <arg name="visualization" default="true" />
    <param name="/use_sim_time" value="false" />
    <param name="alpha" type="double" value="$(arg alpha)" />
    <param name="beta" type="double" value="$(arg beta)" />
    <param name="gamma" type="double" value="$(arg gamma)" />

    <!--- Run Rviz-->
    <group if="$(arg visualization)">
        <node pkg="rviz" type="rviz" name="rviz" args="-d $(find fgo_mot)/config/test.rviz" />
    </group>

    <!--- TF -->
    <!-- <node pkg="tf" type="static_transform_publisher" name="camera_init_to_map" args="0 0 0 1.570795   0        1.570795 /map    /camera_init 10" /> -->
    <!-- <node pkg="tf" type="static_transform_publisher" name="base_link_to_camera" args="0 0 0 -1.570795 -1.570795 0        /camera /base_link   10" /> -->

    <!-- Parameters -->
    <rosparam file = "$(find fgo_mot)/config/config.yaml"/>



    <!--- LeGO-LOAM -->

    <node pkg="fgo_mot" type="imageProjection" name="imageProjection" output="screen"/>
    <node pkg="fgo_mot" type="featureExtraction" name="featureExtraction" output="screen"/>
    <node pkg="fgo_mot" type="objectTracker" name="objectTracker" output="screen" />

    <node pkg="fgo_mot" type="lidarOdometry" name="lidarOdometry" output="screen"/>

    <group if="$(arg rawdata)">
        <node pkg="fgo_mot" type="kittiHelper" name="kittiHelper" output="screen"/>
    </group>

    <!-- <node pkg="fgo_mot" type="estimator" name="estimator" output="screen"/> -->
    <!-- <node pkg="fgo_mot" type="objectCluster" name="objectCluster" output="screen"/> -->

    <!-- <node pkg="lego_loam" type="featureAssociation" name="featureAssociation" output="screen"/> -->
    <!-- <node pkg="lego_loam" type="mapOptmization" name="mapOptmization" output="screen"/> -->
    <!-- <node pkg="lego_loam" type="transformFusion" name="transformFusion" output="screen"/> -->

</launch>
